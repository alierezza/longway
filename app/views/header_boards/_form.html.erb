<div class='panel-body'>
  <%= form_for(@header_board) do |f| %>
    <div class='form-group'>
        <label class='control-label'>Name</label>
        <%= f.text_field :name, "data-rule-required"=>true, :Class=>"form-control", disabled: true %>
    </div>

    <div class='form-group'>
        <label class='control-label'>Name Vietnam</label>
        <%= f.text_field :name_vietnam, "data-rule-required"=>true, :Class=>"form-control", required: true %>
    </div>

    <hr>

    <div class='form-actions pull-right' style='margin-bottom:0'>
      <%= link_to header_boards_path, style: "margin-right: 15px;" do %> Cancel <% end %>
      <%= f.submit  class: 'btn btn-success', data: { disable_with: "Please wait..." } %>
    </div>

  <% end %>
</div>
