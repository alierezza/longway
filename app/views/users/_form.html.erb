<%= form_for(@user) do |f| %>
    <% if params[:action] == "new" or params[:action] == "create" or (params[:reset_password] != "true" and (params[:action] == "new" or params[:action] == "create" )) %>
        <div class='form-group'>
            <label class='control-label'>Email</label>
            <%= f.email_field :email, :Class=>"form-control", required: true %>
        </div>
    <% elsif (params[:reset_password] != "true" and (params[:action] == "new" or params[:action] == "create") ) %>
        <div class='form-group'>
            <label class='control-label'>Email</label>
            <%= f.email_field :email, :Class=>"form-control", required: true, :disabled=>true %>
        </div>
    <% else %>
        <div class='form-group'>
            <label class='control-label'>Email</label>
            <%= f.email_field :email, :Class=>"form-control", required: true, :disabled=>true %>
        </div>
    <% end %>
    <% if params[:action] == "new" or params[:action] == "create" or ( params[:reset_password] == "true" and (params[:action] == "edit" or params[:action] == "update" ) ) %>
        <div class='form-group'>
            <label class='control-label'>Passowrd</label>
            <font size=2s color=red>Minimal 8 Characters</font>
            <%= f.password_field :password, :Class=>"form-control", required: true %>
            <%= hidden_field_tag :status, "reset" %>
        </div>
    <% end %>

    <% if params[:reset_password] == "true" and (params[:action] == "edit" or params[:action] == "update" ) %>
    <% else %>
        <div class='form-group'>
            <label class='control-label'>Name</label>
            <%= f.text_field :nama, :Class=>"form-control", required: true %>
        </div>

        <div class='form-group'>
            <label class='control-label'>Address</label>
            <%= f.text_field :alamat, :Class=>"form-control", required: true %>
        </div>

        <div class='form-group'>
            <label class='control-label'>Phone Number</label>
            <%= f.text_field :telp, :Class=>"form-control", required: true %>
        </div>
    <% end %>
    <hr>

    <div class='form-actions pull-right' style='margin-bottom:0'>
    <%= link_to users_path, style: "margin-right: 15px;" do %> Cancel <% end %>
    <%= f.submit  class: 'btn btn-success', data: { disable_with: "Please wait..." } %>
    </div>
<% end %>

<script>
$("#line_user_id").select2();
</script>

<% if params[:reset_password] == "true" and (params[:action] == "edit" or params[:action] == "update" ) %>
    <script>
    $("#status").attr("disabled",false);
    </script>
<% else %>
    <script>
    $("#status").attr("disabled",true);
    </script>
<% end %>
