<!DOCTYPE html>
<html>
<head>
  <title><%= Language.find_by(:message=>"Company Title").foreign_language %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
    <%= csrf_meta_tags %>
    <script src="//cdn.jsdelivr.net/jquery.marquee/1.3.1/jquery.marquee.min.js" type="text/javascript"></script>
  </head>
  <body>
    <script>
        <% if notice %>
        global_notif('<%= notice %>', "success")
	    <% end %>
	    <% if alert %>
	    global_notif('<%= alert %>', "danger")
	    <% end %>
    </script>

    <% if user_signed_in? %>
    	<%= render 'layouts/menu' %>
    <% end %>
    <div class="inner_body">
      <%= yield %>
    </div>


</body>
</html>
