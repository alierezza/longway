<section class="app">
<header>
	<nav class="main_menu">
		<div  class="col-sm-10">
			<% if current_user.role == "User" %>
				<%= link_to "#{ActionView::Base.full_sanitizer.sanitize(Language.find_by('message'=>'Logout').foreign_language)}".html_safe,destroy_user_session_path, :method => "DELETE", :class=>" col-sm-4 btn btn-info"  %> <center><%= Language.find_by(:message=>"Dont Forget To Logout Before Leaving").foreign_language.html_safe %></center>
			<% end %>
		</div>
		<div class="col-sm-2">
			<a href="#" class="toggle right">â˜°</a>
		</div>
	</nav>

	<nav class="right_menu">
		<ul>
			<li>
				<% if params[:controller] == "reports" and params[:action] != "data" %>
				<div class="engine_status">
				  <div id="status"></div>
				  <button id="connect">Connect</button>
				</div>
				<% end %>
			</li>
			<li>name: <%= current_user.nama %></li>
			<li>role: <%= current_user.role %></li>
			<li><%= link_to "Reset Password", edit_user_path(current_user,:reset_password=>true) %></li>
			<li><%= link_to "Sign Out",destroy_user_session_path, :method => "DELETE"  %></li>

			<hr>

			<% if can? :home, current_user %>
				<li> <%= link_to "Home", homes_path %></li>
			<% end %>

			<% if can? :manage, current_user  %>
				<li> <%= link_to "User", users_path %></li>
			<% end %>

			<% if can? :line, current_user %>
				<li> <%= link_to "Line", lines_path %></li>
			<% end %>

			<% if can? :visual_board, current_user %>
				<li> <%= link_to "Visual Board", boards_path %></li>
			<% end %>

			<% if can? :visual_problem, current_user %>
				<li> <%= link_to "Machine Problem", problems_path %></li>
			<% end %>

			<% if can? :data, current_user %>
				<li> <%= link_to "Data", data_path %></li>
			<% end %>

			<% if can? :master_email, current_user %>
				<li> <%= link_to "Email", masteremails_path %></li>
			<% end %>

			<% if can? :running_text, current_user %>
				<li> <%= link_to "Running Text", ads_path %></li>
			<% end %>

			<% if can? :article, current_user %>
				<li> <%= link_to "Article", articles_path %></li>
			<% end %>

			<% if can? :image, current_user %>
				<li> <%= link_to "Banner", images_path %></li>
			<% end %>

			<% if can? :category, current_user %>
				<li> <%= link_to "Category", categories_path %></li>
			<% end %>

			<% if can? :country, current_user %>
				<li> <%= link_to "Country", countries_path %></li>
			<% end %>

			<% if can? :manage, Defect %>
				<li> <%= link_to "Defect", defects_path %></li>
			<% end %>

			<% if can? :manage, HeaderBoard %>
				<li> <%= link_to "Header Board", header_boards_path %></li>
			<% end %>

			<% if can? :manage, WorkingHour %>
				<li> <%= link_to "Working Hour", working_hours_path %></li>
			<% end %>

			<% if can? :manage, Language %>
				<li> <%= link_to "Language", languages_path %></li>
			<% end %>

			<% if can? :manage, Setting %>
				<li> <%= link_to "Setting", settings_path %></li>
			<% end %>

			<% if can? :manage, Emailsetting %>
				<li> <%= link_to "Email Setting", emailsettings_path %></li>
			<% end %>
		</ul>
	</nav>
</header>

</section>
<script>
	$('.toggle.left').on('click', function(){
  $('nav.right_menu').removeClass('open')
  $('nav.left_menu').toggleClass('open')
  $('nav.main_menu').removeClass('open_right')
  $('nav.main_menu').toggleClass('open_left')
  return false
})

$('.toggle.right').on('click', function(){
  $('nav.right_menu').toggleClass('open')
  $('nav.left_menu').removeClass('open')
  $('nav.main_menu').removeClass('open_left')
  $('nav.main_menu').toggleClass('open_right')

  $('.inner_body').toggleClass('bring_to_back')
  return false
})


$('body').on('click', function(){
	$('.inner_body').removeClass('bring_to_back')
  $('nav.right_menu').removeClass('open')
  $('nav.left_menu').removeClass('open')
  $('nav.main_menu').removeClass('open_left')
  $('nav.main_menu').removeClass('open_right')
})



</script>
