<%= form_for([@working_day, @working_hour]) do |f| %>
  <h3><%= @working_day.name %></h3>

  <div class='form-group'>
      <label class='control-label'>Start</label>
      <div class='input-group date' id='datetimepicker1'>
          <%= f.text_field :start, "data-rule-required"=>true, :Class=>"form-control", onkeydown: "return false", required: true, autocomplete: "off" %>
          <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
          </span>
      </div>
  </div>

  <div class='form-group'>
      <label class='control-label'>End</label>
      <div class='input-group date' id='datetimepicker2'>
          <%= f.text_field :end, "data-rule-required"=>true, :Class=>"form-control", onkeydown: "return false", required: true, autocomplete: "off" %>
          <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
          </span>
      </div>
  </div>

  <div class='form-group'>
      <label class='control-label'>Working Type</label>
      <%= f.select :working_state, options_for_select(WorkingHour.state, :selected=>@working_hour.working_state),{:include_blank => '-- Select Type --'}, class: 'form-control', required: true %>
  </div>

  <hr>

  <div class='form-actions pull-right' style='margin-bottom:0'>
    <%= link_to working_hour_path(@working_day), style: "margin-right: 15px;" do %> Cancel <% end %>
    <%= f.submit  class: 'btn btn-success', data: { disable_with: "Please wait..." } %>
  </div>

<% end %>

<script>
  $(document).ready(function(){
    $('#datetimepicker1').datetimepicker({
      format: "HH:mm", showClear: true, stepping: 30
    });
    $('#datetimepicker2').datetimepicker({
      format: "HH:mm", showClear: true, stepping: 30
    });
  });

  $("#working_hour_working_state").select2();
</script>