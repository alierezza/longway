


<div class="container login">
  <div class="header_login" style="margin-bottom: 45px;"><h3><%= ActionView::Base.full_sanitizer.sanitize(Language.find_by(:message=>"Company Title").foreign_language) %></h3></div>
  <section id="content">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <h1>Login Form</h1>
      <div>
        <%= f.email_field :email, autofocus: true, placeholder: "Email", id: "username" %>

      </div>
      <div>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

      </div>
      <div>
        <%= f.submit "Log in" %>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      </div>
    <% end %>

  </section><!-- content -->
</div><!-- container -->

<%= render "devise/shared/links" %>
