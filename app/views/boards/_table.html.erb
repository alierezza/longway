
<table class="table table-bordered table-stripped">
	<thead>
		<tr>
			<th rowspan=2 width="7%">LINE<br>(1-8)</th>
			<th rowspan=2>OPR</th>
			<th rowspan=2 width="7%">TARGET</th>
			<th rowspan=2 >SUM</th>
			<th rowspan=2>ACT</th>
			<th rowspan=2>SUM</th>
			<th rowspan=2 width="7%">%</th>
			<th rowspan=2>PPH</th>
			<!--<th rowspan=2 width="1%">EFCY</th>-->
			<th colspan=2>DEFECT</th>
			<th rowspan=2>RFT</th>
			<th rowspan=2 width="25%">REMARK</th>
			<th rowspan=2 width="1%">ARTICLE</th>
		</tr>
		<tr>
			<th>INT</th>
			<th>EXT</th>
		</tr>
	</thead>
	<tbody>
		<% @boards.where("no >= 1 and no <= 8").order("no").each_with_index do |line,index| %>
			<% line.reports.where("tanggal = ?",Date.today).each_with_index do |report,index| %>
				<tr id="<%= line.id %>" style="<%= line.status == false ? 'background-color:yellow' : 'background-color:white' %>">
					<td><b><font size="6">L. <%= report.line.no %></font></b></td>
					<td><b><font size="6"><%= report.detailreports.last.opr %></font></b></td>
					<td><b><font size="6"><%= report.detailreports.last.target %></font></b></td>
					<td><b><font size="6"><%= report.detailreports.sum("target") %></font></b></td>
					<td>
						<b>
							<% if report.detailreports.last.act < report.detailreports.last.target %>
								<font size="6" color=red>
									<%= report.detailreports.last.act %>
								</font>
							<% else %>
								<font size="6">
									<%= report.detailreports.last.act %>
								</font>
							<% end %>
						</b>
					</td>
					<td><b><font size="6"><%= report.detailreports.sum("act") %></font></b></td>
					<td><b><font size="6"><%= Report.percent(report, report.detailreports.last.jam) %></font></b></td>
					<td><b><font size="6"><%= Report.pph(report, report.detailreports.last.jam) %></font></b></td>
					<!-- efficiency -->
					<!-- <td>
						<b>
							<font size="6">
								<%#= Report.efficiency(report, report.detailreports.last.jam) %>
							</font>
						</b>
					</td> -->
					<td><b><font size="6"><%= Report.total_defect_int(report, report.detailreports.last.jam) %></font></b></td>
					<td><b><font size="6"><%= Report.total_defect_ext(report, report.detailreports.last.jam) %></font></b></td>
					<td><b><font size="6"><%= Report.rft(report, report.detailreports.last.jam) %></font></b></td>
					<td style="line-height:60%"><b><font size="3" style="line-height:5%"><%= report.detailreports.last.remark %></font></b></td>
					<td style="line-height:60%"><b><font size="3" style="line-height:5%"><%= report.detailreports.last.detailreportarticles.last.article %></font></b></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>


</table>

